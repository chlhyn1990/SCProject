<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.SCSystem.mapper.ManagerGradeMapper">
	<select id="getManagerGradeList" resultType="com.SCSystem.dto.ManagerGrade">
	SELECT * 
	FROM as_evse.manager_grade
	</select>
	
	<select id="getManagerGradeSearchList" parameterType="String" resultType="com.SCSystem.dto.ManagerGrade">
	SELECT * 
	FROM as_evse.manager_grade
	WHERE grade_name LIKE CONCAT('%', #{search}, '%')
	</select>
	
	<select id="getManagerGrade" parameterType="Integer" resultType="com.SCSystem.dto.ManagerGrade">
	SELECT * 
	FROM as_evse.manager_grade
	WHERE idx = #{idx}
	</select>
	
	<insert id="insertManagerGrade" parameterType="com.SCSystem.dto.ManagerGrade">
	INSERT INTO as_evse.manager_grade
	(grade_name, create_dt, modify_dt)
	VALUES
	(
		 #{grade_name}
		,NOW()
		,NOW()		
	)
	</insert>
	
	<update id="updateManagerGrade" parameterType="com.SCSystem.dto.ManagerGrade">
	UPDATE as_evse.manager_grade
	SET grade_name = #{grade_name}
	  , modify_dt = NOW()
	WHERE idx = #{idx}
	</update>
	
	<delete id="deleteManagerGrade" parameterType="Integer">
	DELETE FROM as_evse.manager_grade
	WHERE idx = #{idx}
	</delete>
</mapper>